<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link to shared login/register CSS stylesheet -->
    <link rel="stylesheet" href="/css/login-register.css">
    <title>Organiser Register</title>
</head>

<body>
    <div class="container">
        <main class="main-content">
            <!-- Header -->
            <header class="topbar">
                <h1>Organiser Register Page</h1>
                <a href="/">
                    <button class="return-home-btn">
                        Return to Main Home
                    </button>
                </a>
                <section class="avatar">
                    <img src="/assets/Organiser.png" alt="Men in suit">
                </section>
            </header>

            <!-- Registration form container -->
            <div class="login-content">
                <!-- Registration form -->
                <form action="/organiser/register" method="POST" class="login-form">
                    <h2>Create your account</h2>

                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" name="email" id="email" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" required>
                    </div>
                    <!-- Display error message if registration fails -->
                    <% if (error) { %>
                        <p class="error-message">
                            <%= error %>
                        </p>
                        <% } %>

                            <button type="submit" class="btn">Register</button>
                </form>
                <!-- Link to login page -->
                <p class="register-link">
                    Already have an account? <a href="/organiser/login">Login here.</a>
                </p>
            </div>
        </main>
    </div>
</body>

</html>