<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/organiser-home.css">
    <title>Organiser Home Page</title>
</head>

<body>
    <!--main container to center content-->
    <div class="container">
        <main class="main-content">
            <!--header with page title, return btn and avatar img-->
            <header class="topbar">
                <h1>Organiser Home Page</h1>
                <a href="/">
                    <button class="return-home-btn">
                        Return to Main Home
                    </button>
                </a>
                <section class="avatar">
                    <img src="/assets/Organiser.png" alt="Men in suit">
                </section>
                <a href="/organiser/logout">
                    <button class="logout-btn">
                        Log Out
                    </button>
                </a>
            </header>
            <!--main area split into left and right sections-->
            <div class="home-content">
                <!--left section containing draft events and counts-->
                <div class="left-section">
                    <!--count number of event section-->
                    <section class="left-top">
                        <h2>Event Activity</h2>
                        <section class="create-btn">
                            <form action="/organiser/create" method="POST">
                                <button type="submit">+ Create New Event</button>
                            </form>
                        </section>
                        <section class="event-counts">
                            <div class="count-box">
                                <p class="count-number">
                                    <%= totalEvents %>
                                </p>
                                <p class="count-label">Total</p>
                            </div>
                            <div class="count-box">
                                <p class="count-number">
                                    <%= draftCount %>
                                </p>
                                <p class="count-label">Draft</p>
                            </div>
                            <div class="count-box">
                                <p class="count-number">
                                    <%= publishedCount %>
                                </p>
                                <p class="count-label">Published</p>
                            </div>
                        </section>
                    </section>
                    <!--list of draft events-->
                    <div class="draft-events">
                        <h3>Draft Events</h3>

                        <% if (drafts.length===0) { %>
                            <p>No drafts event yet.</p>
                            <% } else { %>
                                <% drafts.forEach(event=> { %>
                                    <div class="event-card">
                                        <img src="/assets/<%= event.image %>" alt="Event image of Yoga Pose"
                                            class="event-image">
                                        <div class="event-details">
                                            <h4>
                                                <%= event.event_title %>
                                            </h4>
                                            <p><span>Date: </span>
                                                <%= event.event_datetime %>
                                            </p>
                                            <p><span>Created: </span>
                                                <%= event.created_at %>
                                            </p>
                                            <div class="ticket-info">
                                                <p><span>Ticket Price: </span></p>
                                                <% if (event.tickets.length===0) { %>
                                                    <p>No tickets added yet.</p>
                                                    <% } else { %>
                                                        <% event.tickets.forEach(ticket=> { %>
                                                            <div class="ticket-badge">
                                                                <span>
                                                                    <%= ticket.type %>
                                                                </span>
                                                                <span>$<%= ticket.price %> â‡¨</span>
                                                                <span>
                                                                    <%= ticket.quantity %> available
                                                                </span>
                                                            </div>
                                                            <% }) %>
                                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="event-buttons">
                                            <a href="/organiser/events/edit/<%= event.event_ID %>">
                                                <button type="submit">Edit</button>
                                            </a>
                                            <form action="/organiser/publish/<%= event.event_ID %>" method="POST">
                                                <button type="submit">Publish</button>
                                            </form>
                                            <form action="/organiser/delete/<%= event.event_ID %>" method="POST"
                                                onsubmit="return confirm('Delete this draft?')">
                                                <button type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% }) %>
                                        <% } %>
                    </div>
                </div>
                <!--right section has site info and published events-->
                <div class="right-section">
                    <!--site info panel-->
                    <section class="site-info">
                        <h2> Welcome to
                            <%= siteInfo.site_name %>
                        </h2>
                        <p>
                            <%= siteInfo.site_description %>
                        </p>
                        <section class="site-btn">
                            <a href="/organiser/settings">
                                <button>
                                    Edit Site Settings
                                </button></a>
                        </section>
                    </section>
                    <!--list of published events-->
                    <div class="published-events">
                        <h3>Published Events</h3>

                        <% if (published.length===0) { %>
                            <p>No published events yet.</p>
                            <% } else { %>
                                <% published.forEach(event=> { %>
                                    <div class="event-card published-card">
                                        <div class="event-details">
                                            <div class="event-header">
                                                <span class="event-id">
                                                    <%= event.event_ID %>
                                                </span>
                                                <h4>
                                                    <%= event.event_title %>
                                                </h4>
                                            </div>
                                            <p><span>Date:</span>
                                                <%= event.event_datetime %>
                                            </p>
                                            <p><span>Created:</span>
                                                <%= event.created_at %>
                                            </p>
                                            <p><span>Published:</span>
                                                <%= event.published_at %>
                                            </p>
                                            <p><span>Tickets:</span>
                                                <%= event.tickets %>
                                            </p>

                                            <div class="event-actions">
                                                <a href="/attendee/event/<%= event.event_ID %>" class="share-link">View
                                                    as Attendee</a>
                                                <form action="/organiser/delete/<%= event.event_ID %>" method="POST"
                                                    onsubmit="return confirm('Delete this event?')">
                                                    <button type="submit">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <% }) %>
                                        <% } %>
                    </div>

                </div>
            </div>
        </main>
    </div>
</body>

</html>