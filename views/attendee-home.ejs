<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/attendee-home.css">
    <title>Attendee Home Page</title>
</head>

<body>
    <!-- Main container wrapping all content -->
    <div class="container">
        <main class="main-content">
            <!-- Header with page title, return button, and avatar image -->
            <header class="topbar">
                <h1>Attendee Home Page</h1>
                <a href="/">
                    <button class="return-home-btn">
                        Return to Main Home
                    </button>
                </a>
                <section class="avatar">
                    <img src="/assets/Attendee.png" alt="Women in headband">
                </section>
            </header>

            <!-- Main content area for phone mockup and event cards -->
            <div class="home-content">

                <!-- Phone mockup showing the site title and description -->
                <section class="phone">
                    <img src="/assets/phone-frame.png" alt="Iphone frame">
                    <section class="screen-text">
                        <h2 class="site-name">
                            <%= site.site_name %>
                        </h2>
                        <p class="site-description">
                            <%= site.site_description %>
                        </p>
                    </section>
                </section>

                <!-- If there are no events to display -->
                <% if (events.length===0) { %>
                    <div class="no-events">No upcoming events.</div>
                    <%} else {%>
                        <!-- If events exist, render them as cards -->
                        <div class="cards-wrapper">
                            <% events.forEach(event=> { %>
                                <div class="event-card">
                                    <img src="/assets/<%= event.image_filename ? event.image_filename : 'event-mat.png' %>"
                                        alt="Yoga pose" class="event-image">
                                    <div class="card-data">
                                        <h3 class="event-title">
                                            <%= event.event_title %>
                                        </h3>
                                        <p class="event-date">
                                            <%= new Date(event.event_datetime).toLocaleString() %>
                                        </p>
                                        <p class="event-description">
                                            <%= event.event_description ? event.event_description
                                                : "Join us for this event." %>
                                        </p>
                                        <a href="/attendee/event/<%= event.event_ID %>">
                                            <button class="learn-more-btn">
                                                Learn more >
                                            </button></a>
                                    </div>

                                </div>
                                <% }) %>
                        </div>
                        <% } %>
                            <!-- Scroll indicator dots below the cards -->
                            <div class="scroll-indicator">
                                <% events.forEach((event, index)=> { %>
                                    <!-- Mark the first dot as active -->
                                    <span class="dot<%= index === 0 ? ' active' : '' %>"></span>
                                    <% }) %>
                            </div>
            </div>
        </main>
    </div>
</body>

</html>